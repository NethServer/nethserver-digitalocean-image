{
  "variables":
    {
      "version": "2003",
      "iso_url": "https://sourceforge.net/projects/nethserver/files/nethserver-7.8.2003-x86_64.iso/download",
      "iso_checkmsum": "7cbc39d1d97ebdbb943520e666257882a398765f"
    },
  "builders":
    [
      {
	"vm_name": "nethserver-7.8.{{user `version`}}.qcow2",
        "boot_wait": "5s",
        "disk_size": "10240",
        "headless": true,
        "iso_checksum": "{{user `iso_checkmsum`}}",
        "iso_url": "{{user `iso_url`}}",
	"shutdown_timeout": "1h",
        "accelerator": "kvm",
	"disk_compression": true,
        "type": "qemu",
	"communicator": "none",
	"qemuargs": 
          [[ "-m", "1024m" ]],
	"http_directory": "ks",
	"boot_command": [
          "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/unattended<enter><wait>"
	]
      }
    ]
}
