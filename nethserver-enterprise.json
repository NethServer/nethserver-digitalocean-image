{
  "variables":
    {
      "version": "7.9.2009",
      "iso_url": "https://ns-legacy.ams3.digitaloceanspaces.com/NethServer/nethserver-enterprise-7.9.2009-x86_64.iso",
      "iso_checkmsum": "a1a5c718bdc809c9483354538777f7a986f48af0"
    },
  "builders":
    [
      {
	"vm_name": "nethserver-enterprise-{{user `version`}}.qcow2",
        "boot_wait": "5s",
        "disk_size": "10240",
        "headless": true,
        "iso_checksum": "{{user `iso_checkmsum`}}",
        "iso_url": "{{user `iso_url`}}",
	"shutdown_timeout": "1h",
        "accelerator": "kvm",
	"disk_compression": true,
        "type": "qemu",
	"communicator": "none",
	"qemuargs": 
          [[ "-m", "1024m" ]],
	"http_directory": "ks",
	"boot_command": [
          "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/unattended<enter><wait>"
	]
      }
    ]
}
